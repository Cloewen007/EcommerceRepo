<h1>Listing All Active orders</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Prod</th>
    <th>Cust</th>
    <th>Orderdate</th>
    <th>Qty Ordered</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.prod_id %></td>
    <td><%= order.cust_id %></td>
    <td><%= order.orderdate %></td>
    <td><%= order.qty_ordered %></td>
    <td><%= link_to 'Show Order Detials', order %></td>
    <td><%= link_to 'Edit Order Detals', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

