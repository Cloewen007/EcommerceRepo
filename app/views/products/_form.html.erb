<%= form_for @product do |f| %>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity %>
  </div>
  <div>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label :category_id %><br />
    <%= f.number_field :category_id %>
  </div>
  <div>
    <%= f.label :img_url %><br />
    <%= f.text_field :img_url %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
