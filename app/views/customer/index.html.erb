<h1>Listing All Active Customers</h1>

<table>
  <tr>
    <th>Cust ID</th>
    <th>Order ID</th>
    <th>Name</th>
    <th>Postal Code</th>
    <th>Street</th>
    <th>City </th>
    <th>Province</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td><%= customer.order_id %></td>
    <td><%= customer.name %></td>
    <td><%= customer.postalcode %></td>
    <td><%= customer.street %></td>
    <td><%= customer.city %></td>
    <td><%= customer.province %></td>
    <td><%= link_to 'Show Customer Details', customer %></td>
    <td><%= link_to 'Edit Customer Details', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Customer', new_customer_path %>